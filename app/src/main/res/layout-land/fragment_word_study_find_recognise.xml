<?xml version="1.0" encoding="utf-8"?>
<layout>
	<data>
		<variable name="viewModel" type="jp.mihailskuzmins.sugoinihongoapp.features.word.study.WordStudyFindRecogniseViewModel"/>
	</data>

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:baselineAligned="false"
		tools:context=".features.word.study.WordStudyFindRecogniseFragment">

		<include
			layout="@layout/fragment_word_study_find_recognise_question"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			app:viewModel="@{viewModel}"/>

		<include
			layout="@layout/fragment_word_study_find_recognise_options"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			app:viewModel="@{viewModel}"/>
	</LinearLayout>

</layout>