<?xml version="1.0" encoding="utf-8"?>
<layout>

	<androidx.coordinatorlayout.widget.CoordinatorLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".features.settings.backup.SettingsLocalBackupListFragment">

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/fragment_settings_local_backup_list_recycler_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"/>

		<include
			android:id="@+id/fragment_settings_local_backup_list_no_results_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			layout="@layout/control_text_view_no_results"/>
	</androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>